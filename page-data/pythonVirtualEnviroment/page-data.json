te":"2024.12.13.","category":["Python"],"thumbnail":{"childImageSharp":{"gatsbyImageData":{"layout":"constrained","placeholder":{"fallback":"data:image/png;base64,"},"images":{"fallback":{"src":"/static/3c85c85d7b213d722ef5d4169459af91/448ee/thumbnail.webp","srcSet":"/static/3c85c85d7b213d722ef5d4169459af91/b47e6/thumbnail.webp 480w,\n/static/3c85c85d7b213d722ef5d4169459af91/d2939/thumbnail.webp 960w,\n/static/3c85c85d7b213d722ef5d4169459af91/448ee/thumbnail.webp 1920w","sizes":"(min-width: 1920px) 1920px, 100vw"},"sources":[]},"width":1920,"height":1920}},"publicURL":"/static/3c85c85d7b213d722ef5d4169459af91/thumbnail.png"}}}}]}},"pageContext":{"slug":"/pythonVirtualEnviroment/","series":[],"lastmod":"2024.12.13."}},"staticQueryHashes":["2383754777"],"slicesMap":{}}